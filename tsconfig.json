{
  "compilerOptions": {
    "baseUrl": "src/",
    "esModuleInterop": true,
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "sourceMap": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/components/*": ["components/*"],
      "@/config/*": ["config/*"],
      "@/context/*": ["context/*"],
      "@/lib/*": ["lib/*"],
      "@/theme": ["theme/index.ts"],
      "@/types/*": ["types/*"],
      "@/utilities/*": ["utilities/*"],
      "@/i18n-config": ["i18n-config.ts"],
      "@payload-config": ["payload.config.ts"]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "next-env.d.ts",
    "src/app/my-mdx-page/page.mdx",
    "emails/**/*.ts",
    "emails/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
